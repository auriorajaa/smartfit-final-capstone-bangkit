<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/selectGenderLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Gender"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/menButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Men"
        app:layout_constraintTop_toBottomOf="@id/selectGenderLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/womenButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Women"
        app:layout_constraintTop_toBottomOf="@id/menButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:id="@+id/clothingTypeContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/womenButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/formalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Formal"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/weddingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wedding"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/streetWearButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Street Wear"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/pajamasButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pajamas"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/vintageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vintage"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/casualButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Casual"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/sportswearButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sportswear"
            android:layout_gravity="center"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
